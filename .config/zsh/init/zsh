HISTFILE="${XDG_STATE_HOME}/zsh/history"
[[ -d "${XDG_STATE_HOME}/zsh" ]] || mkdir -p "${XDG_STATE_HOME}/zsh"

if [[ $SHLVL -gt 1 ]] && command -v gbt &>/dev/null; then
    PROMPT='$(gbt $?)'

    export GBT_CARS='Status, Os, Hostname, Dir, Kubectl, Git, PyVirtEnv, Sign'

    # Tell python virtualenv to leave the prompt alone
    export VIRTUAL_ENV_DISABLE_PROMPT='1'
else
    ZSH_THEME="afowler"
fi

# Make sure gpg agent is available on this tty during initialization
gpg-connect-agent updatestartuptty /bye &>/dev/null
